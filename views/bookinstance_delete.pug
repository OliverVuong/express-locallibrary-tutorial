extends layout

block content

  h1 #{title}:
  h2 #{bookinstance.book.title}
  h2 #{bookinstance._id}

  p Do you really want to delete this instance?

  form(method='POST')
      div.form-group
        input#instanceid.form-control(type='hidden', name='instanceid', value=bookinstance._id )

      button.btn.btn-primary(type='submit') Delete
